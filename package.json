{
  "name": "simplerdevelopment-monorepo",
  "version": "1.0.0",
  "main": "index.ts",
  "license": "MIT",
  "private": true,
  "scripts": {
    "web:dev": "yarn workspace @simpler-development/web dev",
    "web:build": "yarn workspace @simpler-development/web build",
    "web:lint": "yarn workspace @simpler-development/web lint",
    "web:test": "yarn workspace @simpler-development/web test",
    "web:start": "yarn workspace @simpler-development/web start",
    "sockets:start": "yarn workspace @simpler-development/sockets start",
    "sockets:lint": "yarn workspace @simpler-development/sockets lint",
    "sockets:test": "yarn workspace @simpler-development/sockets test",
    "sockets:deploy": "./scripts/deploy-sockets.sh",
    "mobile:start": "yarn workspace @simpler-development/mobile-chat start",
    "mobile:lint": "yarn workspace @simpler-development/mobile-chat lint",
    "mobile:test": "yarn workspace @simpler-development/mobile-chat test",
    "chat:test": "yarn workspace @simpler-development/chat-ui test",
    "chat:lint": "yarn workspace @simpler-development/chat-ui lint",
    "chat:build": "yarn workspace @simpler-development/chat-ui build",
    "chat:dev": "yarn workspace @simpler-development/chat-ui dev",
    "chat:prettier": "yarn workspace @simpler-development/chat-ui prettier",
    "chat:types": "yarn workspace @simpler-development/chat-ui types",
    "db:create-migration": "yarn workspace @simpler-development/database create-migration",
    "db:migrate": "yarn workspace @simpler-development/database migrate",
    "db:lint": "yarn workspace @simpler-development/database lint",
    "e2e": "yarn workspace @simpler-development/e2e-tests run-test",
    "e2e:lint": "yarn workspace @simpler-development/e2e-tests lint",
    "lint": "yarn workspaces run lint",
    "test": "yarn workspaces run test",
    "types": "yarn workspaces run types",
    "prettier": "yarn workspaces run prettier",
    "reinstall": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && yarn install",
    "pre-push": "yarn prettier --write && yarn lint",
    "pack-db" : "./scripts/pack-db.sh",
    "pack-ui": "./scripts/pack-ui.sh"
  },
  "workspaces": {
    "packages": [
      "applications/*",
      "packages/*",
      "tests/*"
    ]
  },
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "puppeteer": "^24.3.1"
  },
  "devDependencies": {
    "@types/wait-on": "^5.3.4"
  }
}
